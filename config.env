# Copy this file to .env and customize the values below

# Target date and time for countdown (ISO 8601 format)
# Examples:
# - New Year's Eve: 2024-12-31T23:59:59Z
# - Specific local time: 2024-12-25T09:00:00-05:00
# - UTC time: 2024-06-15T12:00:00Z
TARGET_DATETIME=2025-06-06T17:00:00-06:00

# Optional: Set a custom title for the countdown
COUNTDOWN_TITLE=Our Release from Purgatory

# Optional: Port for local development (defaults to 3000)
PORT=3000 